# Ghost Gym V2 - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Firebase Configuration
# Get these from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# Optional Firebase Settings
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTO_INIT=true

# Application Settings
ENVIRONMENT=development
PORT=8000

# Workout Sharing - Public Domain (for share URLs)
# Production: simplegym-v2-production.up.railway.app
# Development: localhost:8001
RAILWAY_PUBLIC_DOMAIN=localhost:8001

# Gotenberg Service (for PDF generation)
GOTENBERG_URL=http://localhost:3000